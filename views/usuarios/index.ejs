<%- include('../partials/header', { title }) %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><i class="fas fa-users"></i> Listado de usuarios</h1>
    <a href="/usuarios/create" class="btn btn-primary">
      <i class="fas fa-plus"></i> Nuevo Usuario
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <% if (usuarios && usuarios.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="thead-light">
              <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Contraseña</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% usuarios.forEach(usuario => { %>
                <tr>
                  <td><%= usuario.id %></td>
                  <td><%= usuario.nombre %></td>
                  <td><%= usuario.apellido %></td>
                  <td><%= usuario.correo %></td>
                  <td><%= usuario.contraseña %></td>
                  <td>
                    <div class="btn-group btn-group-sm">
                      <a href="/usuarios/<%= usuario.id %>" class="btn btn-info" data-toggle="tooltip" title="Ver detalle">
                        <i class="fas fa-eye"></i>
                      </a>
                      <a href="/usuarios/<%= usuario.id %>/edit" class="btn btn-warning" data-toggle="tooltip" title="Editar">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form action="/usuarios/<%= usuario.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger" data-toggle="tooltip" title="Eliminar" onclick="confirmarEliminacion(event, 'usuario')">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i> No hay usuarios registrados. 
          <a href="/usuarios/create" class="alert-link">Registre un nuevo usuario</a>.
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>